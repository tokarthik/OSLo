{
 "scenarios": {
  "blazedemo": {
   "headers": {
    "Upgrade-Insecure-Requests": "1"
   }, 
   "requests": [
    {
     "url": "http://blazedemo.com/", 
     "method": "GET", 
     "label": "Welcome Page"
    }, 
    {
     "url": "http://blazedemo.com/reserve.php", 
     "body": {
      "toPort": "${toPort}", 
      "fromPort": "${fromPort}"
     }, 
     "method": "POST", 
     "label": "Reserve Page"
    }, 
    {
     "url": "http://blazedemo.com/purchase.php", 
     "method": "GET", 
     "label": "Purchase Page"
    }, 
    {
     "url": "http://blazedemo.com/confirmation.php", 
     "method": "GET", 
     "label": "Confirmation Page"
    }
   ], 
   "data-sources": [
    {
     "path": "./param.csv", 
     "delimiter": ", ", 
     "variable-names": "fromPort,toPort"
    }
   ], 
   "retrieve-resources": false
  }
 }, 
 "execution": [
  {
   "scenario": "blazedemo", 
   "ramp-up": "30s", 
   "locations": {
    "us-west-2": 1, 
    "us-east-1": 2, 
    "us-east-2": 2, 
    "us-west-1": 1
   }, 
   "steps": 10, 
   "concurrency": {
    "local": 50, 
    "cloud": 2000
   }, 
   "executor": "jmeter", 
   "hold-for": "6m"
  }
 ], 
 "modules": {
  "blazemeter": {
   "token": "********"
  }, 
  "cloud": {
   "test": "Geo Distributed Stress Test", 
   "report-name": "Geo Distributed Stress Test"
  }
 }, 
 "reporting": [
  {
   "module": "final-stats", 
   "dump-xml": "stats.xml", 
   "summary": true
  }
 ]
}
