{
 "scenarios": {
  "blazedemo": {
   "headers": {
    "Upgrade-Insecure-Requests": "1"
   }, 
   "requests": [
    {
     "url": "http://blazedemo.com/", 
     "method": "GET", 
     "label": "Welcome Page"
    }, 
    {
     "url": "http://blazedemo.com/reserve.php", 
     "method": "POST", 
     "label": "Reserve Page"
    }, 
    {
     "url": "http://blazedemo.com/purchase.php", 
     "method": "GET", 
     "label": "Purchase Page"
    }, 
    {
     "url": "http://blazedemo.com/confirmation.php", 
     "method": "GET", 
     "label": "Confirmation Page"
    }
   ], 
   "retrieve-resources": false
  }
 }, 
 "execution": [
  {
   "scenario": "blazedemo", 
   "ramp-up": "30s", 
   "locations": {
    "us-east-1": 2, 
    "us-west-1": 1
   }, 
   "concurrency": {
    "local": 50, 
    "cloud": 200
   }, 
   "executor": "jmeter", 
   "hold-for": "2m"
  }, 
  {
   "scenario": "blazedemo", 
   "ramp-up": "2m", 
   "locations": {
    "ap-south-1": 1
   }, 
   "concurrency": {
    "local": 50, 
    "cloud": 300
   }, 
   "executor": "jmeter", 
   "hold-for": "30s"
  }
 ], 
 "modules": {
  "blazemeter": {
   "token": "********"
  }, 
  "cloud": {
   "test": "Taurus from Scenario", 
   "report-name": "Taurus from Scenario"
  }
 }, 
 "reporting": [
  {
   "module": "final-stats", 
   "dump-xml": "stats.xml", 
   "summary": true
  }
 ], 
 "settings": {
  "artifacts-dir": "./artifacts/%Y-%m-%d_%H-%M-%S.%f"
 }
}
